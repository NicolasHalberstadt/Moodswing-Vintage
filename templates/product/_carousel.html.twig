<div class="slideshow-container">

	{% for picture in product.pictures %}

		<div class="slide-element fader">
			<img src="{{ picture.path }}" class="product-details-image" alt="{{ product.name }}">
			<div class="arrow">
				<a class="prev" onclick="plusSlides(-1)">&#10094;</a>
				<a class="next" onclick="plusSlides(1)">&#10095;</a>
			</div>
		</div>
	{% endfor %}


	<!-- Next and previous buttons -->

	<div class="slideshow-element-dot">
		{% set pictureNumber = 0 %}
		{% for picture in product.pictures %}
			{% set pictureNumber = pictureNumber + 1 %}
			<span class="dot" onclick="currentSlide({{ pictureNumber }})"></span>
		{% endfor %}

	</div>
</div>
<br>
