<form class="login-form" method="post">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3">
				You are logged in as
				{{ app.user.username }},
				<a href="{{ path('app_logout') }}">Logout</a>
			</div>
		{% endif %}

		<h1 class="h3 mb-3 font-weight-light">Sign in</h1>
		<label class="login-form-emailLabel" for="inputEmail">Email</label>
		<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
		<label class="login-form-passwordLabel" for="inputPassword">Password</label>
		<input type="password" name="password" id="inputPassword" class="form-control" required>

		<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
		<p class="signup-text">You don't have an account ? Create one
			<a class="login-form-signup-link" href="{{ path('app_signup') }}">here</a>
		</p>

		{#
				        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
				        See https://symfony.com/doc/current/security/remember_me.html
				
				        <div class="checkbox mb-3">
				            <label>
				                <input type="checkbox" name="_remember_me"> Remember me
				            </label>
				        </div>
				    #}

		<button class="btn btn-lg btn-primary login-form-signinBtn" type="submit">
			Sign in
		</button>
	</form>